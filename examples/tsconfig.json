{
  "compilerOptions": {
    "strict": true,
    "target": "ES5",
    "module": "ESNext",
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": true,
    "pretty": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "newLine": "LF",
    "noEmitHelpers": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "isolatedModules": true,
    "lib": [
      "dom",
      "ES5",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "@nutlet/*": [
        "../packages/*/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".",
  ]
}